.nav-bar {
  position: fixed;
  background-color: #977049;
  z-index: 10;
}

.outer {
  height: 100vh;
  width: 100%;
  flex-direction: column;
  background-color: rgba(236, 223, 198, 0.527);
  display: flex;
  padding: 5rpx 20rpx;
  padding-top: 165rpx;
}
.puzzle-game {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center; 
  align-items: center;
  box-sizing: border-box;
}
.hint-image-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 20rpx;
}
.hint-image-title {
	color: #000000;
  margin: 10rpx 0;
  font-size: 30rpx;
  font-family: 'KaiTi';
}
.puzzle-container {
	display: flex;
  flex-wrap: wrap;
  width: 100%;
	border: 1px solid #ccc;
}
.puzzle-piece {
	box-sizing: border-box;
	border: 1px solid #ccc;
}
.moves {
	text-align: center;
	font-size: 36rpx;
  margin: 20rpx 0;
  font-family: 'KaiTi';
}