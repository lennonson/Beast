/* pages/Inheritance/Inheritance.wxss */
.nav-bar {
  position: fixed;
  background-color: #977049;
  z-index: 10;
}
.animation {
  transition: transform 0.8s ease-in-out, filter 0.8s ease-in-out;
}
.page {
  width: 100%;
  height: 300vh;
  box-sizing: border-box;
  background-color: rgba(236, 223, 198, 0.527);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.foreword {
  width: 100%;
  height: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}
.coverContainer {
  margin: 40rpx 0;
}
.content {
  width: 90%;
  font-size: 35rpx;
  font-family:'FangSong', Courier, monospace;
  letter-spacing: 3px; 
  line-height: 1.6;    
}
.inner {
  margin-left: 20rpx;
}
.arrow_up {
  display: flex;
  justify-content: center;
}
.arrow_up image {
  width: 80rpx;
  height: 80rpx;
}
.matter {
  width: 100%;
  height: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx 200rpx 30rpx;
}
.matter2 {
  width: 100%;
  height: 29.5%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx 30rpx 100rpx;
}