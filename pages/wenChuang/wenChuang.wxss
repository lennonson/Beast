/* pages/wenChuang.wxss */
.nav-bar {
  position: fixed;
  background-color: #977049;
  z-index: 10;
}

.main{
	display: flex;
	width: 100%;
	height: 100%;
  background-color: rgba(236, 223, 198, 0.527);
}
/* 左侧 */
.left{
  margin-top: 164rpx;
	display: flex;
	flex-direction: column; 
	width: 220rpx;
	text-align: center;
  background-color: rgba(238, 230, 216, 0.548);
}
.wenChuang-container {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.wenChuang-container.on {
  background-color: rgba(233, 216, 184, 0.527);
}
.wenChuang-name{
  font-size: 30rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.wenChuang-name.on{
	font-size: 33rpx;
  color: #ff4a00;
  font-weight: bold;
}

/* 右侧 */
.right{
  margin-top: 170rpx;
	display: flex;
	flex-direction: column;
}
.wenChuang-list{
	margin-top: 10rpx;
	padding: 0 20rpx;
}
.wenChuang-list .header{
	height: 90rpx;
	line-height: 90rpx;
	font-size: 30rpx;
  padding-left: 28rpx;
  font-weight: bold;
}

.goods-list{
	display: flex;
  flex-wrap: wrap;
}
.goods-list-item{
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 150rpx;
	height: 150rpx;
	margin: 14rpx;
}
.goods-list-item image{
	width: 120rpx;
	height: 120rpx;
	/* background: cyan; */
}
.goods-list-item text{
	font-size: 24rpx;
	margin-top: 16rpx;
}

