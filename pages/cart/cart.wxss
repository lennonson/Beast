/* 导航栏样式 */
.nav-bar {
  position: fixed;
  background-color: #977049;
  z-index: 10;
}
.outer {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: rgba(236, 223, 198, 0.527);
}
.page {
  margin-top: 165rpx;
  width: 100%;
  height: 90vh;
  justify-content: center;
  align-items: center;
  margin-left: 18rpx;
}

/* 商品项样式 */
.cart-item {
  width: 95%;
  height: 300rpx;
  display: flex;
  padding: 20rpx;
  margin-top: 25rpx;
  border-radius: 20rpx;
  background-color: #fff;
  align-items: center;
}
.selected {
  background-image: url('/icon/select.png'); 
  background-size: cover;
}
.Btn {
  border-radius: 50%;
  height: 45rpx;
  width: 45rpx;
  margin-right: 20rpx;
  background-color: rgba(226, 226, 226, 0.548);
}
.item-image {
  width: 30%;
  height: 80%;
  margin-right: 20rpx;
  border-radius: 10rpx;
  background-color: #eee;
  border-radius: 20rpx;
}
.item-info {
  height: 95%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 15rpx;
}

.item-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 800;
}
.item-price {
  font-size: 36rpx;
  color: #e53935;
  font-weight: 1000;
}

/* 数量控制区域 */
.secondary {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 减号和加号按钮 */
.reduce-btn, .add-btn {
  height: 70%;
  width: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50rpx;
  background-color: #977049;
  color: #fff;
  font-size: 30rpx;
  border-radius: 5rpx;
}
.control {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.quantity {
  margin: 0 10rpx;
  font-size: 30rpx;
  min-width: 40rpx;
  text-align: center;
  color: #000000;
}

.checkout {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx 20rpx;
}
.cart-summary {
  padding: 20rpx;
  border-top: 1rpx solid #ddd;
  font-weight: 500;
  font-size: 28rpx;
  color: #333;
}
.checkout-btn {
  width: 30%;
  padding: 20rpx;
  background-color: #e53935;
  color: #fff;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
}


