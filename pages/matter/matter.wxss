/* pages/matter/matter.wxss */
.nav-bar {
  position: fixed;
  background-color: #977049;
  z-index: 10;
}

.pageContainer {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: rgba(236, 223, 198, 0.527);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.page {
  margin-top: 100px;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.img {
  width: 90%;
  height: 50vh;
  margin: 10rpx 0 15rpx 0;
}
.txt {
  width: 90%;
  height: 100%;
  font-size: 19px;
  font-weight: 500;
  font-family:'FangSong', Courier, monospace;
  text-indent: 2em;
  letter-spacing: 4rpx;
  line-height: 1.6;
  margin: 0 0 50rpx 0;
}