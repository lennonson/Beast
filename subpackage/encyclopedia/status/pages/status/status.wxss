/* pages/status/status.wxss */
.nav-bar {
  position: fixed;
  background-color: #977049;
  z-index: 10;
}

.outer {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 25rpx;
  background-color: rgba(245, 235, 219, 0.986);
}
.page {
  margin-top: 165rpx;
  width: 100%;
  height: 90vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.content {
  margin-top: 10rpx;
}
.content image {
  width: 100%;
}
.title {
  display: flex;
  align-items: center;
  height: 5vh;
  z-index: 5;
  font-size: 42rpx;
  font-family: 'ZhongSong';
  font-weight: 1000;
  background-color: rgba(245, 235, 219, 0.986);
}
.matter {
  font-family: 'FangSong';
  font-size: 40rpx;
  text-indent: 2em;
  line-height: 1.3;    /* 增加行高，提升可读性 */
}
.quote {
  padding: 40rpx 20rpx 40rpx 20rpx;
  font-family: 'kaiTi';
  font-size: 38rpx;
}
.inset {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}
.annotation {
  margin: 15rpx 0 0 0;
  font-size: 32rpx;
  font-family: 'kaiTi';
}