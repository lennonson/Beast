.nav-bar {
  position: fixed;
  background-color: #977049;
  z-index: 10;
}

.animation {
  transition: transform 1s ease-in-out, filter 1.2s ease-in-out;
}
.page {
  width: 100%;
  height: 180vh;
  box-sizing: border-box;
  background-color: rgba(236, 223, 198, 0.527);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow: auto;
}

.foreword {
  height: 90vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.coverContainer {
  margin: 0 0 40rpx 0;
}
.content {
  width: 80%;
  font-size: 35rpx;
  font-family:'FangSong', Courier, monospace;
  letter-spacing: 6rpx;
  line-height: 1.5;  
}
.arrow_up {
  display: flex;
  justify-content: center;
}
.arrow_up image {
  width: 80rpx;
  height: 80rpx;
}
.matter {
  width: 100%;
  height: 90vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}