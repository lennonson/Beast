/* pages/list1/list1.wxss */
.nav-bar {
  position: fixed;
  background-color: #977049;
  z-index: 10;
}

.outer {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 10rpx;
  background-color: rgba(236, 223, 198, 0.527);
}
.page {
  margin-top: 170rpx;
  width: 100%;
  height: 90vh;
  justify-content: center;
  align-items: center;
}

.videoPlayer {
  border-radius: 10px;
  width: 100%;
  height: 30%;
  margin: 5rpx 0 20rpx 0;
}

.title{
  display: flex;
  align-items: center;
  padding-left: 3px;
}
.quare{
  width: 40rpx;
  height: 40rpx;
  background-color: #977049;
}
.titleTxt {
  font-size: 46rpx;
  font-family: 'ZhongSong';
}

.textContainer{
  padding: 10rpx;
}
.txt {
  font-family: 'FangSong';
  font-size: 40rpx;
  line-height: 1.3;   
}

